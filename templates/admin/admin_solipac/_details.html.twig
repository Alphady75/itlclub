{% if solipac.planChauffant %}
<div style="padding: 5px 0;">
	<div style="display: inline-block;width: 32%">
		<div>Plancher chauffant</div>
	</div>
	<div style="display: inline-block;width: 32%">
		<strong>Marque</strong>
		{{ solipac.planChauffantMarque }}
	</div>
	<div style="display: inline-block;width: 32%">
		<strong>Volume</strong>
		{{ solipac.planChauffantVolume }}
	</div>
</div>
{% endif %}

{% if solipac.adoucisseur %}
<div style="padding: 5px 0;">		
	<div style="display: inline-block;width: 32%">
		<div>Adoucisseur</div>
	</div>
	<div style="display: inline-block;width: 32%">
		<strong>Marque</strong>
		{{ solipac.adoucisseurMarque }}
	</div>
	<div style="display: inline-block;width: 32%">
		<strong>Volume</strong>
		{{ solipac.adoucisseurVolume }}

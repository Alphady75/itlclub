{{ form_start(form) }}

<div class="row">
    <div class="col-md-8">

        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.name) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.lastname) }}
            </div>
        </div>

        <div class="row">
            <div class="col-md-6">
                {{ form_row(form.telephone) }}
            </div>
            <div class="col-md-6">
                {{ form_row(form.job) }}
            </div>
        </div>

        {{ form_row(form.roles) }}

        {{ form_row(form.email) }}

        {{ form_row(form.plainPassword) }}

        {{ form_row(form.isVerified) }}

        <button class="btn btn-dark mr-3">{{ button_label|default('Enregistrer les modifications') }}</button>
        
    </div>
</div>

{{ form_end(form) }}

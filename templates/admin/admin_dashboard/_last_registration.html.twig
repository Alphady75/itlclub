<div class="mb-3">
	<div class="card-header py-3 px-0 no-bg border-0 bg-transparent">
		<h6 class="mb-0 fw-bold ">{{ appName }} </h6>
		<span class="text-muted">D'autres partenaires viennent d'adhérer </span>
	</div>
	<div class="row row-deck">
		{% for company in lastregistrations %}
		<div class="col-md-6">
			
			<div class="item mb-3">
				<div class="card">
					<div class="card-body">
						<div class="d-flex align-items-center justify-content-between">
							<div class="lesson_name">
								<h6 class="mb-0 fw-bold  fs-6  mb-2">{{ company.name ?? '...' }}</h6>
							</div>
						</div>
						<div class="d-flex align-items-center">
							{% if company.picture %}

								<div class="avatar"><img class="avatar rounded-circle" src="{{ vich_uploader_asset(company) | imagine_filter('medium_avatar') }}" alt=""></div>

							{% endif %}

							<div class="flex-fill ms-2 text-truncate">
								<div class="">{{ company.user.lastname ~ ' ' ~ company.user.name }}</div>
							</div>
						</div>
						<div class="dividers-block"></div>
						<div class="row g-2">
							<div class="col-6">
								<div class="align-items-center">
									<i class="fa fa-users mr-2"></i>
									
									<span class="badge bg-primary ml-3">
		                                {% if company.nbEmployees == 1 %}
		                                    0-4 salaries
		                                {% elseif company.nbEmployees == 2 %}
		                                    5-9 salaries
		                                {% elseif company.nbEmployees == 3 %}
		                                    10 salaries et + 
		                                {% endif %}
		                            </span>
								</div>
							</div>
							<div class="col-6">
								<div class="d-flex align-items-center">
									<i class="icofont-ui-timer "></i>
									<span class="ms-2">{{ company.created|date('d/m/Y') }}</span>
								</div>
							</div>
							<div class="col-12">
								<div class="align-items-center">
									<i class="fa fa-telephone"></i>
									<span class="ms-2">{{ company.phoneNumber }}</span>
								</div>
								<div class="align-items-center">
									<i class="fa fa-enveloppe"></i>
									<span class="ms-2">{{ company.email }}</span>
								</div>
							</div>
							<div class="col-12">
								<div class="d-flex align-items-center">
									<i class="fa fa-card"></i>
									<span class="ms-2">{{ company.siret }}</span>
								</div>
							</div>
						</div>
					</div>
				</div>
			</div>

		</div>
		{% else %}
		<p>Aucun adhérent</p>
		{% endfor %}
	</div>
</div>
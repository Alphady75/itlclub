{% extends 'base.html.twig' %}

{% block title %}Réinitialisez votre mot de passe{% endblock %}

{% block body %}
<!-- ACCOMPAGNEMENT SECTION -->
<section class="primary-bg costom-padding cover-bg-no-repeat" style="background-image: url('{{ asset('themes/front/assets/img/core/WAVE_BACKGROUND.png') }}');">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto">

                <div class="p-5 request-form border rounded bg-white mt-5 shadow">
                    {% for flashError in app.flashes('reset_password_error') %}
                        <div class="alert alert-danger" role="alert">{{ flashError }}</div>
                    {% endfor %}
                    <h1>Réinitialisez votre mot de passe</h1>

                    {{ form_start(requestForm) }}
                        {{ form_row(requestForm.email) }}
                        <div>
                            <small>
                                Entrez votre adresse e-mail et nous vous enverrons un
                                lien pour réinitialiser votre mot de passe.
                            </small>
                        </div>

                        <button class="btn primary-btn">Envoyer un e-mail de réinitialisation du mot de passe</button>
                    {{ form_end(requestForm) }}
                </div>

            </div>
        </div>
    </div>
</section>
<!-- ACCOMPAGNEMENT SECTION -->
{% endblock %}

{% block footer %}{% endblock %}

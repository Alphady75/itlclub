{% extends 'base.html.twig' %}

{% block title %}Réinitialiser votre mot de passe{% endblock %}

{% block body %}
<!-- ACCOMPAGNEMENT SECTION -->
<section class="primary-bg costom-padding cover-bg-no-repeat" style="background-image: url('{{ asset('themes/front/assets/img/core/WAVE_BACKGROUND.png') }}');">
    <div class="container">
        <div class="row">
            <div class="col-md-6 mx-auto">

                <div class="p-5 request-form border rounded bg-white mt-5 shadow">
                    <legend class="font-weight-bold">Réinitialiser votre mot de passe</legend>
                    {{ form_start(resetForm) }}
                        {{ form_row(resetForm.plainPassword) }}
                        <button class="btn primary-btn">Réinitialiser le mot de passe</button>
                    {{ form_end(resetForm) }}
                </div>
                 
            </div>
        </div>
    </div>
</section>
<!-- ACCOMPAGNEMENT SECTION -->
{% endblock %}

